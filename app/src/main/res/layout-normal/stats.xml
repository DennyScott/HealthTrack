<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:keepScreenOn="true"
    android:layout_weight="3"
    android:id="@+id/stats">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:text="@string/stats_title"
        android:textStyle="bold"
        android:textSize="@dimen/title_normal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/title_colour" />
    <FrameLayout
        android:id="@+id/chartFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:largeHeap="true"
        android:layout_alignRight="@+id/monthButton"
        android:layout_alignEnd="@+id/monthButton"
        android:layout_above="@+id/dayButton"
        android:layout_below="@+id/title">
    </FrameLayout>

    <ImageButton
        android:layout_width="@dimen/settings_button_normal_width"
        android:layout_height="@dimen/settings_button_normal_height"
        android:id="@+id/settingsButton"
        android:background="@drawable/settings_button_action"
        android:onClick="settingsButton"
        android:layout_above="@+id/chartFrame"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/day_button"
        android:id="@+id/dayButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/stats_time_button_text_colour"
        android:textSize="@dimen/stats_time_button_text_size"
        android:onClick="dayButton"
        android:background="#ffb9dd"
        android:alpha="0.4"
        android:layout_toLeftOf="@+id/weekButton"
        android:layout_toStartOf="@+id/weekButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/week_button"
        android:id="@+id/weekButton"
        android:textColor="@color/stats_time_button_text_colour"
        android:textSize="@dimen/stats_time_button_text_size"
        android:onClick="weekButton"
        android:alpha="0.4"
        android:background="#ffb9dd"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/month_button"
        android:id="@+id/monthButton"
        android:textColor="@color/stats_time_button_text_colour"
        android:textSize="@dimen/stats_time_button_text_size"
        android:onClick="monthButton"
        android:background="#ffb9dd"
        android:alpha="0.4"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/weekButton"
        android:layout_toEndOf="@+id/weekButton" />

</RelativeLayout>