<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:keepScreenOn="true"

    android:id="@+id/stats">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:text="My Stats"
        android:textStyle="bold"
        android:textSize="50sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#403c3c" />
    <FrameLayout
        android:id="@+id/chartFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:largeHeap="true"
        android:layout_alignRight="@+id/monthButton"
        android:layout_alignEnd="@+id/monthButton"
        android:layout_above="@+id/dayButton"
        android:layout_below="@+id/title">
    </FrameLayout>

    <ImageButton
        android:layout_width="55dp"
        android:layout_height="35dp"
        android:id="@+id/settingsButton"
        android:background="@drawable/settings_button_action"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="7dp"
        android:layout_marginEnd="7dp"
        android:layout_marginTop="10dp"
        android:onClick="settingsButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Day"
        android:id="@+id/dayButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#111111"
        android:textSize="25sp"
        android:onClick="dayButton"
        android:background="#ffb9dd"
        android:alpha="0.4"
        android:layout_toLeftOf="@+id/weekButton"
        android:layout_toStartOf="@+id/weekButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Week"
        android:id="@+id/weekButton"
        android:textColor="#111111"
        android:textSize="25sp"
        android:onClick="weekButton"
        android:alpha="0.4"
        android:background="#ffb9dd"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/title"
        android:layout_alignStart="@+id/title"
        android:layout_alignRight="@+id/title"
        android:layout_alignEnd="@+id/title" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Month"
        android:id="@+id/monthButton"
        android:textColor="#111111"
        android:textSize="25sp"
        android:onClick="monthButton"
        android:background="#ffb9dd"
        android:alpha="0.4"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/weekButton"
        android:layout_toEndOf="@+id/weekButton" />

</RelativeLayout>