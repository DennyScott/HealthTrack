<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:keepScreenOn="true"
    android:id="@+id/rewards">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:text="@string/goals_submission_title"
        android:textStyle="bold"
        android:textSize="@dimen/title_normal"
        android:textColor="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:paddingTop="30dp" />

    <Button
        android:layout_width="@dimen/save_changes_button_width"
        android:layout_height="@dimen/save_changes_button_height"
        android:text="@string/save_changes_button"
        android:id="@+id/saveButton"
        android:background="#FFFFBC59"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="53dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="@string/weight_goal_hint"
        android:ems="10"
        android:id="@+id/targetWeightTextEntry"
        android:layout_below="@+id/title"
        android:layout_alignLeft="@+id/title"
        android:layout_alignStart="@+id/title"
        android:layout_marginTop="22dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="@string/weeks_goal_hint"
        android:ems="10"
        android:id="@+id/targetWeeksTextEntry"
        android:layout_below="@+id/targetWeightTextEntry"
        android:layout_alignLeft="@+id/targetWeightTextEntry"
        android:layout_alignStart="@+id/targetWeightTextEntry" />

</RelativeLayout>