<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:keepScreenOn="true"
    android:largeHeap="true"
    android:id="@+id/stats">

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="55dp"
        android:id="@+id/settingsButton"
        android:background="@drawable/settings_button_action"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <FrameLayout
        android:id="@+id/chartFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:largeHeap="true"
        android:layout_above="@+id/settingsButton">
    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:text="@string/stats_title"
        android:textStyle="bold"
        android:textSize="70sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#403c3c" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/background"
        android:orientation="vertical"
        android:keepScreenOn="true"
        android:id="@+id/relativeLayout"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Day"
            android:id="@+id/dayButon"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="#ffb9dd"
            android:textColor="#111111"
            android:textSize="25sp"
            android:layout_toLeftOf="@+id/textView"
            android:layout_toStartOf="@+id/textView"
            android:onClick="dayButton"
            android:alpha="0.4" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Week"
            android:id="@+id/weekButton"
            android:background="#ffb9dd"
            android:textColor="#111111"
            android:textSize="25sp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/dayButon"
            android:layout_alignRight="@+id/textView"
            android:layout_alignEnd="@+id/textView"
            android:onClick="weekButton"
            android:alpha="0.4" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Month"
            android:id="@+id/monthButton"
            android:background="#ffb9dd"
            android:textColor="#111111"
            android:textSize="25sp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/weekButton"
            android:layout_toEndOf="@+id/weekButton"
            android:onClick="monthButton"
            android:alpha="0.4" />

        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:largeHeap="true"
            android:layout_above="@+id/dayButon"
            android:layout_below="@+id/textView" />

        <ImageButton
            android:layout_width="55dp"
            android:layout_height="35dp"
            android:id="@+id/imageButton"
            android:background="@drawable/settings_button_action"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="7dp"
            android:layout_marginEnd="7dp"
            android:layout_marginTop="10dp"
            android:onClick="settingsButton" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:text="My Stats"
            android:textStyle="bold"
            android:textSize="50sp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textColor="#403c3c" />

    </RelativeLayout>

</RelativeLayout>