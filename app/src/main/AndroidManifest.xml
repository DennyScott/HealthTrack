<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="club.glamajestic.healthtrack">
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Splash"
            android:label="@string/app_name"

            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="HealthTrack"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name=".StatsActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="Stats"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"></activity>
        <activity
            android:name=".Goals"
            android:configChanges="orientation|keyboardHidden|screenSize"></activity>
        <activity
            android:name=".GoalsUserInfo"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="Goals User Info"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"></activity>
        <activity
            android:name=".GoalsSubmission"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="Goals Submission"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"></activity>
        <activity
            android:name=".Ate"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="What I ate Today"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"></activity>
        <activity
            android:name=".Warnings"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="Warnings"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"></activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"></activity>
        <activity
            android:name=".DisplayList"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="List View"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"></activity>
        <instrumentation android:name="android.support.test.runner.AndroidJUnitRunner"
            android:targetPackage="club.glamajestic.tests.StatsDataAccessTest"
            android:label="Tests for Stats"/>
        <instrumentation android:name="android.test.InstrumentationTestRunner"
            android:targetPackage="club.glamajestic.healthtrack.test"
            android:label="UI Tests"/>
    </application>

</manifest>
